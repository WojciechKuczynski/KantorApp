        <!--<DataTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="SectionBorder" Property="Background" Value="LightBlue"  />
                                                        <Setter TargetName="SectionBorder" Property="BorderBrush" Value="DarkMagenta"  />
                                                    </Trigger>
                                                </DataTemplate.Triggers>-->

    </Grid>
</UserControl>
