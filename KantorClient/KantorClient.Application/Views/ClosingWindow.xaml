<Window x:Class="KantorClient.Application.Views.ClosingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KantorClient.Application.Views"
        mc:Ignorable="d"
        Title="Zamykanie" Height="140" Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Czy na pewno chcesz zamknąć aplikację?" FontWeight="Black" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Content="Wróć" Margin="5" Width="80" Click="Back" />
            <Button Content="Wyloguj" Margin="5" Width="100" Click="Logout" />
            <Button Content="Zamknij" Margin="5" Width="100" Click="Exit" />
        </StackPanel>
    </Grid>
</Window>
